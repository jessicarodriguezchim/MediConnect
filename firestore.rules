rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // TEMPORAL PARA DESARROLLO: Permitir lectura/escritura a usuarios autenticados
    // ⚠️ CAMBIAR ESTAS REGLAS EN PRODUCCIÓN
    
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Usuarios: Pueden leer/escribir su propio documento
    match /usuarios/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Médicos: Lectura para todos autenticados, escritura para el mismo médico
    match /medicos/{medicoId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Citas: Los usuarios autenticados pueden crear/leer
    match /appointments/{appointmentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    
    // Citas legacy: Similar
    match /citas/{citaId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    
    // Hospitales: Solo lectura
    match /hospitales/{hospitalId} {
      allow read: if request.auth != null;
    }
  }
}

